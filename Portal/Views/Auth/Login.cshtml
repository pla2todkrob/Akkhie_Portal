@model Portal.Shared.Models.DTOs.Auth.LoginRequest

@{
    ViewData["Title"] = "เข้าสู่ระบบ";
    Layout = "_LayoutCenterNoHeader";
}

<div class="card shadow-sm border-0">
    <div class="card-body p-4 p-md-5">
        <div class="text-center mb-4">
            <img src="~/images/logo.png" alt="อัคคีปราการ" height="50" class="mb-3">
            <h4 class="fw-bold text-primary">เข้าสู่ระบบ</h4>
            <p class="text-muted mb-0">กรุณากรอกข้อมูลเพื่อเข้าสู่ระบบ</p>
        </div>

        <form asp-action="Login" method="post" class="needs-validation" novalidate>
            <input type="hidden" asp-for="ReturnUrl" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger small mb-4"></div>

            <!-- ชื่อผู้ใช้ -->
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="ชื่อผู้ใช้" required>
                <label asp-for="Username" class="form-label">
                    <i class="bi bi-person-fill me-2"></i>ชื่อผู้ใช้
                </label>
                <span asp-validation-for="Username" class="text-danger small"></span>
            </div>

            <!-- รหัสผ่าน -->
            <div class="form-floating mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="รหัสผ่าน" required>
                <label asp-for="Password" class="form-label">
                    <i class="bi bi-lock-fill me-2"></i>รหัสผ่าน
                </label>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <!-- ตัวเลือกเพิ่มเติม -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="RememberMe">
                    <label class="form-check-label small" asp-for="RememberMe"></label>
                </div>
                <a asp-action="ForgotPassword" class="text-decoration-none small text-primary">ลืมรหัสผ่าน?</a>
            </div>

            <!-- ปุ่มเข้าสู่ระบบ -->
            <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                <span class="spinner-border spinner-border-sm me-2 d-none" role="status" aria-hidden="true"></span>
                <i class="bi bi-box-arrow-in-right me-2"></i>เข้าสู่ระบบ
            </button>

            <!-- ลิงก์สมัครสมาชิก -->
            <div class="text-center pt-3 border-top">
                <p class="text-muted mb-2 small">
                    <span class="me-2">ยังไม่มีบัญชีผู้ใช้?</span>
                    <a asp-action="Register" class="text-decoration-none fw-medium text-primary">สมัครสมาชิก</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}