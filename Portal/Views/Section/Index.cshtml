@model IEnumerable<Portal.Shared.Models.ViewModel.SectionViewModel>

@{
    ViewData["Title"] = "จัดการข้อมูลแผนก";
    Layout = "_Layout";
    var breadcrumbs = new List<Tuple<string, string>>
    {
        new("หน้าแรก", Url.Action("Index","Home") ?? ""),
        new("ข้อมูลแผนก", "")
    };
}

<div class="container py-4">
    <partial name="_Breadcrumb" model="breadcrumbs" />

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-0">@ViewData["Title"]</h2>
            <p class="text-muted mb-0"><i class="bi bi-info-circle me-2"></i>รายการแผนกทั้งหมดในระบบ</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>เพิ่มแผนก
        </a>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table id="viewTable" class="table table-hover table-striped mb-0" style="width:100%">
                    <thead class="table-light">
                        <tr>
                            <th class="text-nowrap">@Html.DisplayNameFor(model => model.Name)</th>
                            <th class="text-nowrap">@Html.DisplayNameFor(model => model.DepartmentName)</th>
                            <th class="text-nowrap">@Html.DisplayNameFor(model => model.DivisionName)</th>
                            <th class="text-nowrap">@Html.DisplayNameFor(model => model.CompanyName)</th>
                            <th class="text-center">จัดการ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle">@item.Name</td>
                                <td class="align-middle">@item.DepartmentName</td>
                                <td class="align-middle">@item.DivisionName</td>
                                <td class="align-middle">@item.CompanyName</td>
                                <td class="align-middle text-center fit-content">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                                        <i class="bi bi-pencil-square me-1"></i>แก้ไข
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            app.setupDataTable('#viewTable', {
                orderFixed: [[3, 'asc']],
                order: [[2, 'asc'], [1, 'asc']],
                columnDefs: [
                    { orderable: false, targets: [4] },
                    { responsivePriority: 1, targets: 0 },
                    { responsivePriority: 2, targets: 4 },
                    { "visible": false, "targets": 3 }
                ],
                rowGroup: {
                    dataSrc: 3
                }
            });
        });
    </script>
}