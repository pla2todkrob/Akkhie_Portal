@{
    var employeeCode = User.FindFirst("EmployeeCode")?.Value ?? "";
    var isSystemRole = (User.FindFirst("IsSystemRole")?.Value ?? "false").ToLower() == "true";
}
<header class="sticky-top shadow-sm">
    <nav class="navbar navbar-expand-lg navbar-light bg-white">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/images/logo.png" alt="อัคคีปราการ" height="30" class="d-inline-block align-top me-2">
                อัคคีปราการ
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarContent">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">หน้าแรก</a>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    @if (isSystemRole)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMaster" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-gear me-2"></i>
                                <span>ข้อมูลหลัก</span>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMaster">
                                <li>
                                    <h6 class="dropdown-header">โครงสร้างองค์กร</h6>
                                </li>
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="Company">บริษัท</a></li>
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="Division">สายงาน</a></li>
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="Department">ฝ่าย</a></li>
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="Section">แผนก</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="Employee">พนักงาน</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <h6 class="dropdown-header">ระบบ Support</h6>
                                </li>
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="SupportCategory">หมวดหมู่ Support</a></li>
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="Support">จัดการ Ticket</a></li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <h6 class="dropdown-header">ระบบ/อื่นๆ</h6>
                                </li>
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="UploadFile">ไฟล์ที่อัพโหลด</a></li>
                                <li><a class="dropdown-item" asp-action="Index" asp-controller="AuditLog">Log การใช้งาน</a></li>
                            </ul>
                        </li>
                    }
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownProfile" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle me-2"></i>
                            <span>@employeeCode</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdownProfile">
                            <li>
                                <a class="dropdown-item" asp-area="" asp-controller="Employee" asp-action="Profile">
                                    <i class="bi bi-person me-2"></i>
                                    <span>โปรไฟล์</span>
                                </a>
                            </li>
                            <li class="dropdown-divider"></li>
                            <li>
                                <form asp-area="" asp-controller="Auth" asp-action="Logout" method="post" class="dropdown-item p-0">
                                    <button type="submit" class="btn btn-link dropdown-item">
                                        <i class="bi bi-box-arrow-right me-2"></i>
                                        <span>ออกจากระบบ</span>
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>