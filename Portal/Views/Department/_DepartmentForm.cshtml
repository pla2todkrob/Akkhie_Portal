@model Portal.Shared.Models.ViewModel.DepartmentViewModel

<form asp-action="@ViewContext.RouteData.Values["action"]" id="SaveForm" name="SaveForm" method="post" class="needs-validation"
      data-ajax="true"
      data-success-url="@Url.Action("Index","Department")"
      data-confirm="true"
      novalidate>
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
    <input type="hidden" asp-for="Id" />

    <!-- Main Info Card -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-light py-3"><h5 class="mb-0">ข้อมูลหลัก</h5></div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <select asp-for="CompanyId" asp-items="@ViewBag.Companies" class="form-select" required>
                            <option value="">-- เลือกบริษัท --</option>
                        </select>
                        <label asp-for="CompanyId"></label>
                        <span asp-validation-for="CompanyId" class="text-danger small"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <select asp-for="DivisionId" asp-items="@ViewBag.Divisions" class="form-select" required>
                            <option value="">-- เลือกสายงาน --</option>
                        </select>
                        <label asp-for="DivisionId"></label>
                        <span asp-validation-for="DivisionId" class="text-danger small"></span>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-floating">
                        <input asp-for="Name" class="form-control" placeholder=" " required />
                        <label asp-for="Name"></label>
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sections Card -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-light py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0">รายการแผนก (Sections)</h5>
            <button type="button" class="btn btn-sm btn-success" id="add-section-btn"><i class="bi bi-plus-circle"></i> เพิ่มแผนก</button>
        </div>
        <div class="card-body">
            <div id="sectionContainer" class="d-flex flex-column gap-3">
                @if (Model.SectionViewModels != null)
                {
                    @for (var i = 0; i < Model.SectionViewModels.Count; i++)
                    {
                        <div class="child-item input-group">
                            <input type="hidden" asp-for="SectionViewModels[i].Id" />
                            <div class="form-floating flex-grow-1">
                                <input asp-for="SectionViewModels[i].Name" class="form-control" placeholder="ชื่อแผนก" required />
                                <label asp-for="SectionViewModels[i].Name"></label>
                            </div>
                            <button type="button" class="btn btn-outline-danger remove-section-btn"><i class="bi bi-trash"></i></button>
                            <span asp-validation-for="SectionViewModels[i].Name" class="text-danger w-100 d-block small mt-1"></span>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</form>

<!-- Template สำหรับเพิ่ม Section ด้วย JavaScript -->
<div id="sectionTemplate" class="d-none">
    <div class="child-item input-group">
        <input type="hidden" name="SectionViewModels[{index}].Id" value="0" />
        <div class="form-floating flex-grow-1">
            <input name="SectionViewModels[{index}].Name" class="form-control" placeholder="ชื่อแผนก" required data-val="true" data-val-required="กรุณากรอกชื่อแผนก" />
            <label>ชื่อแผนก</label>
        </div>
        <button type="button" class="btn btn-outline-danger remove-section-btn"><i class="bi bi-trash"></i></button>
        <span class="text-danger small w-100" data-valmsg-for="SectionViewModels[{index}].Name" data-valmsg-replace="true"></span>
    </div>
</div>
