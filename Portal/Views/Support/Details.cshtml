@using Portal.Shared.Constants
@using Portal.Shared.Enums.Support
@model Portal.Shared.Models.ViewModel.Support.TicketDetailViewModel

@{
    ViewData["Title"] = $"Ticket #{Model.TicketNumber}";
    var breadcrumbs = new List<Tuple<string, string>>
    {
        new("หน้าแรก", Url.Action("Index", "Home") ?? ""),
        new("จัดการ Support Ticket", Url.Action("Index", "Support") ?? ""),
        new((string)ViewData["Title"], "")
    };

    bool isOpen = Model.Status == TicketStatus.Open.GetDisplayName();
    bool isInProgress = Model.Status == TicketStatus.InProgress.GetDisplayName();
    bool isResolved = Model.Status == TicketStatus.Resolved.GetDisplayName();
    bool isClosed = Model.Status == TicketStatus.Closed.GetDisplayName();
    bool isCancelled = Model.Status == TicketStatus.Cancelled.GetDisplayName();
    bool isRejected = Model.Status == TicketStatus.Rejected.GetDisplayName();
}

<div class="container py-4">
    <partial name="_Breadcrumb" model="breadcrumbs" />

    <div class="row g-4">
        <!-- Left Column: Ticket Information & History -->
        <div class="col-lg-7">
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <h3 class="fw-bold text-primary mb-1">@Model.Title</h3>
                        <span class="badge rounded-pill fs-6 @GetStatusClass(Model.Status)">@Model.Status</span>
                    </div>
                    <p class="text-muted mb-3">Ticket: @Model.TicketNumber</p>

                    <div class="row g-3 small mb-3">
                        <div class="col-md-6"><i class="bi bi-person-fill me-2 text-primary"></i><strong>ผู้แจ้ง:</strong> @Model.ReportedBy</div>
                        <div class="col-md-6"><i class="bi bi-calendar-event-fill me-2 text-primary"></i><strong>วันที่แจ้ง:</strong> @Model.CreatedAt.ToString("g")</div>
                        <div class="col-md-6"><i class="bi bi-tags-fill me-2 text-primary"></i><strong>ประเภท:</strong> @Model.RequestType</div>
                        <div class="col-md-6"><i class="bi bi-tag-fill me-2 text-primary"></i><strong>หมวดหมู่:</strong> @Model.Category</div>
                        <div class="col-md-6"><i class="bi bi-bar-chart-fill me-2 text-primary"></i><strong>ความสำคัญ:</strong> @Model.Priority</div>
                        <div class="col-md-6"><i class="bi bi-person-workspace me-2 text-primary"></i><strong>ผู้รับผิดชอบ:</strong> @(Model.AssignedTo ?? "ยังไม่มีผู้รับผิดชอบ")</div>
                        @if (Model.QueuePosition > 0)
                        {
                            <div class="col-12 mt-3">
                                <div class="alert alert-info d-flex align-items-center" role="alert">
                                    <i class="bi bi-hourglass-split fs-4 me-3"></i>
                                    <div>
                                        <h6 class="alert-heading mb-0">คิวที่กำลังรอ: @Model.QueuePosition</h6>
                                        <small>ลำดับคิวของท่านอาจมีการเปลี่ยนแปลงได้</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <h5 class="mt-4">รายละเอียดปัญหา</h5>
                    <div class="bg-light p-3 rounded border">
                        <p class="mb-0" style="white-space: pre-wrap;">@Model.Description</p>
                    </div>

                    @if (Model.Attachments.Any())
                    {
                        <h5 class="mt-4">ไฟล์แนบ</h5>
                        <div class="list-group">
                            @foreach (var file in Model.Attachments)
                            {
                                <a href="@file.FileUrl" target="_blank" download="@file.FileName" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="bi bi-file-earmark-arrow-down-fill me-2"></i>
                                        @file.FileName
                                    </div>
                                    <span class="badge bg-secondary rounded-pill">@file.FileSizeDisplay</span>
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-header bg-light border-0"><h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>ประวัติการดำเนินการ</h5></div>
                <div class="card-body">
                    @if (Model.History.Any())
                    {
                        <ul class="list-unstyled">
                            @foreach (var history in Model.History.OrderBy(h => h.ActionDate))
                            {
                                <li class="mb-3">
                                    <div class="d-flex">
                                        <div class="me-3"><i class="bi bi-person-circle fs-4 text-secondary"></i></div>
                                        <div>
                                            <strong>@history.ActionBy</strong> - <span class="text-muted small">@history.ActionDate.ToString("g")</span>
                                            <p class="mb-1">@history.ActionDescription</p>
                                            @if (!string.IsNullOrEmpty(history.Comment))
                                            {
                                                <small class="d-block bg-light p-2 rounded border"><em>@history.Comment</em></small>
                                            }
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-center text-muted">ยังไม่มีประวัติการดำเนินการ</p>
                    }
                </div>
            </div>
        </div>

        <!-- Right Column: Action Panel -->
        <div class="col-lg-5">
            <div class="card shadow-sm border-0 position-sticky" style="top: 80px;">
                <div class="card-header bg-primary text-white"><h5 class="mb-0"><i class="bi bi-tools me-2"></i>แผงควบคุม</h5></div>
                <div class="card-body">
                    <form id="ticketActionForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="TicketId" value="@Model.Id" />

                        @* --- ส่วนของ IT --- *@
                        @if (ViewBag.IsITSupportUser == true)
                        {
                            @if (isOpen)
                            {
                                <fieldset class="mb-3">
                                    <legend class="h6 fw-bold">ขั้นตอนรับงาน</legend>
                                    <div class="mb-3">
                                        <label for="AssignedToEmployeeId" class="form-label">มอบหมายให้</label>
                                        <select name="AssignedToEmployeeId" id="AssignedToEmployeeId" asp-items="@ViewBag.ITUsers" class="form-select">
                                            <option value="">-- มอบหมายให้ตัวเอง --</option>
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <label for="Priority" class="form-label">กำหนดความสำคัญ</label>
                                        <select name="Priority" id="Priority" asp-items="@ViewBag.Priorities" class="form-select" required></select>
                                    </div>
                                    <div class="d-grid gap-2">
                                        <button type="button" id="acceptTicketBtn" class="btn btn-primary"><i class="bi bi-check-circle-fill me-2"></i>รับงาน</button>
                                        <button type="button" id="rejectTicketBtn" class="btn btn-outline-danger"><i class="bi bi-x-circle-fill me-2"></i>ปฏิเสธ Ticket</button>
                                    </div>
                                </fieldset>
                            }

                            @if (isInProgress)
                            {
                                <fieldset class="mb-3">
                                    <legend class="h6 fw-bold">ขั้นตอนปิดงาน</legend>
                                    <div class="mb-3">
                                        <label for="CategoryId" class="form-label">หมวดหมู่ (หลังแก้ไข)</label>
                                        <select name="CategoryId" id="CategoryId" asp-items="@ViewBag.Categories" class="form-select" required>
                                            <option value="">-- กรุณาเลือก --</option>
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <label for="Comment" class="form-label">ความคิดเห็น / บันทึกการแก้ไข</label>
                                        <textarea name="Comment" id="Comment" class="form-control" rows="3" placeholder="เช่น: ติดตั้งโปรแกรมใหม่ให้แล้ว..."></textarea>
                                    </div>
                                    <div class="d-grid gap-2">
                                        <button type="button" id="resolveTicketBtn" class="btn btn-success"><i class="bi bi-patch-check-fill me-2"></i>เสร็จสิ้นการแก้ไข</button>
                                        <button type="button" id="rejectTicketBtn" class="btn btn-outline-danger"><i class="bi bi-x-circle-fill me-2"></i>ปฏิเสธ Ticket</button>
                                    </div>
                                </fieldset>
                            }
                        }

                        @* --- ส่วนของผู้แจ้งเรื่อง --- *@
                        @if (Model.IsOwner)
                        {
                            <hr>
                            <fieldset>
                                <legend class="h6 fw-bold">สำหรับผู้แจ้งเรื่อง</legend>
                                <div class="d-grid gap-2">
                                    @if (isResolved)
                                    {
                                        <button type="button" id="closeTicketBtn" class="btn btn-info"><i class="bi bi-check2-circle me-2"></i>ยืนยันและปิดงาน</button>
                                    }
                                    @if (isOpen || isInProgress)
                                    {
                                        <button type="button" id="cancelTicketBtn" class="btn btn-outline-danger"><i class="bi bi-x-circle me-2"></i>ยกเลิก Ticket</button>
                                    }
                                </div>
                            </fieldset>
                        }

                        @if (isClosed || isCancelled || isRejected)
                        {
                            <div class="alert alert-info text-center" role="alert">
                                <i class="bi bi-info-circle-fill me-2"></i> Ticket นี้ได้สิ้นสุดการดำเนินการแล้ว
                            </div>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusClass(string status)
    {
        return status switch
        {
            "เปิด" => "bg-primary-subtle text-primary-emphasis",
            "กำลังดำเนินการ" => "bg-warning-subtle text-warning-emphasis",
            "เสร็จสิ้น" => "bg-success-subtle text-success-emphasis",
            "ปิด" => "bg-secondary-subtle text-secondary-emphasis",
            "ยกเลิก" => "bg-dark-subtle text-dark-emphasis",
            "ปฏิเสธ" => "bg-danger-subtle text-danger-emphasis", // เพิ่มสีสำหรับสถานะปฏิเสธ
            _ => "bg-light text-dark",
        };
    }
}

@section Scripts {
    <script src="~/js/support-ticket-details.js" asp-append-version="true"></script>
}
