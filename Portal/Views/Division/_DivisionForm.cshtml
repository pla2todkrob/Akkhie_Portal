@model Portal.Shared.Models.ViewModel.DivisionViewModel

<form asp-action="@ViewContext.RouteData.Values["action"]" id="SaveForm" name="SaveForm" method="post" class="needs-validation"
      data-ajax="true"
      data-success-url="@Url.Action("Index","Division")"
      data-confirm="true"
      novalidate>

    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show mb-4 d-none">
        <h5 class="alert-heading"><i class="bi bi-exclamation-triangle-fill me-2"></i>พบข้อผิดพลาด</h5>
    </div>

    <input type="hidden" asp-for="Id" />

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 d-flex align-items-center">
                <i class="bi bi-diagram-3-fill text-primary me-2"></i>
                <span>ข้อมูลสายงาน</span>
            </h5>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-floating">
                        <select asp-for="CompanyId" asp-items="@ViewBag.Companies" class="form-select" required>
                            <option value="">-- กรุณาเลือกบริษัท --</option>
                        </select>
                        <label asp-for="CompanyId" class="text-muted"></label>
                        <span asp-validation-for="CompanyId" class="text-danger small"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        <input asp-for="Name" class="form-control" placeholder=" " required>
                        <label asp-for="Name" class="text-muted"></label>
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0 d-flex align-items-center">
                    <i class="bi bi-collection-fill text-primary me-2"></i>
                    <span>รายการฝ่าย (Departments)</span>
                </h5>
                <button type="button" class="btn btn-sm btn-primary" id="add-department-btn">
                    <i class="bi bi-plus-circle me-1"></i>เพิ่มฝ่าย
                </button>
            </div>
        </div>
        <div class="card-body">
            <div id="departmentContainer" class="row row-cols-1 row-cols-lg-2 g-4">
                @if (Model.DepartmentViewModels != null)
                {
                    @for (var i = 0; i < Model.DepartmentViewModels.Count; i++)
                    {
                        <div class="col child-item">
                            <div class="card border-0 shadow-sm h-100">
                                <div class="card-header bg-light">
                                    <div class="d-flex justify-content-end">
                                        <button type="button" class="btn btn-sm btn-outline-danger remove-department-btn">
                                            <i class="bi bi-trash me-1"></i>ลบ
                                        </button>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <input type="hidden" asp-for="DepartmentViewModels[i].Id" />
                                    <div class="form-floating">
                                        <input asp-for="DepartmentViewModels[i].Name" class="form-control" placeholder=" " required>
                                        <label asp-for="DepartmentViewModels[i].Name" class="text-muted"></label>
                                        <span asp-validation-for="DepartmentViewModels[i].Name" class="text-danger small"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</form>

<!-- Template for adding new departments -->
<div id="departmentTemplate" class="d-none">
    <div class="col child-item">
        <div class="card border-0 shadow-sm h-100">
            <div class="card-header bg-light">
                <div class="d-flex justify-content-end">
                    <button type="button" class="btn btn-sm btn-outline-danger remove-department-btn">
                        <i class="bi bi-trash me-1"></i>ลบ
                    </button>
                </div>
            </div>
            <div class="card-body">
                <input type="hidden" name="DepartmentViewModels.Index" value="{index}" />
                <input type="hidden" name="DepartmentViewModels[{index}].Id" value="0" />
                <div class="form-floating">
                    <input name="DepartmentViewModels[{index}].Name" class="form-control" placeholder=" " required data-val="true" data-val-required="กรุณากรอกชื่อฝ่าย">
                    <label>ชื่อฝ่าย</label>
                    <span class="text-danger small" data-valmsg-for="DepartmentViewModels[{index}].Name" data-valmsg-replace="true"></span>
                </div>
            </div>
        </div>
    </div>
</div>
