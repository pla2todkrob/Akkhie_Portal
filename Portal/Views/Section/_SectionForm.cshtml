@model Portal.Shared.Models.ViewModel.SectionViewModel

<form asp-action="@ViewContext.RouteData.Values["action"]" id="SaveForm" name="SaveForm" method="post" class="needs-validation" data-ajax="true" data-success-url="@Url.Action("Index","Section")" novalidate>
    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show mb-4">
        @Html.AntiForgeryToken()
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        <h5 class="alert-heading"><i class="bi bi-exclamation-triangle-fill me-2"></i>พบข้อผิดพลาด</h5>
    </div>

    <input type="hidden" asp-for="Id" />

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0 d-flex align-items-center">
                <i class="bi bi-building text-primary me-2"></i>
                <span>ข้อมูลแผนก</span>
            </h5>
        </div>
        <div class="card-body">
            <!-- [NEW] Company Dropdown -->
            <div class="form-floating mb-3">
                <select asp-for="CompanyId" asp-items="ViewBag.Companies" class="form-select" required>
                    <option value="">-- กรุณาเลือกบริษัท --</option>
                </select>
                <label asp-for="CompanyId" class="text-muted"></label>
                <span asp-validation-for="CompanyId" class="text-danger small"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="DivisionId" asp-items="ViewBag.Divisions" class="form-select" required>
                    <option value="">-- กรุณาเลือกสายงาน --</option>
                </select>
                <label asp-for="DivisionId" class="text-muted"></label>
                <span asp-validation-for="DivisionId" class="text-danger small"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="DepartmentId" asp-items="ViewBag.Departments" class="form-select" required>
                    <option value="">-- กรุณาเลือกฝ่าย --</option>
                </select>
                <label asp-for="DepartmentId" class="text-muted"></label>
                <span asp-validation-for="DepartmentId" class="text-danger small"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Name" class="form-control" placeholder=" ">
                <label asp-for="Name" class="text-muted"></label>
                <span asp-validation-for="Name" class="text-danger small"></span>
            </div>
        </div>
    </div>
</form>
