@model IEnumerable<Portal.Shared.Models.ViewModel.DivisionViewModel>

@{
    ViewData["Title"] = "จัดการข้อมูลสายงาน";
    Layout = "_Layout";
}

<div class="container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">หน้าแรก</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>

    <!-- Header with create button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-0">@ViewData["Title"]</h2>
            <p class="text-muted mb-0"><i class="bi bi-info-circle me-2"></i>รายการสายงานทั้งหมดในระบบ</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>เพิ่มสายงาน
        </a>
    </div>

    <!-- DataTable Card -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table id="viewTable" class="table table-hover table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="text-nowrap">@Html.DisplayNameFor(model => model.Name)</th>
                            <th class="text-nowrap text-center">@Html.DisplayNameFor(model => model.TotalDepartment)</th>
                            <th class="text-nowrap text-center">จัดการ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle">@Html.DisplayFor(modelItem => item.Name)</td>
                                <td class="align-middle text-center fit-content">
                                    @if (item.TotalDepartment > 0)
                                    {
                                        <button class="btn btn-info btn-sm"
                                                onclick="showGlobalModal({
                                                   url: '@Url.Action("GetDepartments", "Division", new { id = item.Id })',
                                                   title: 'รายการฝ่ายภายใน - @item.Name',
                                                   size: 'lg'
                                               })">
                                            <i class="bi bi-diagram-2 me-1"></i>@Html.DisplayFor(modelItem => item.TotalDepartment)
                                        </button>
                                    }
                                    else
                                    {
                                        <span class="badge text-bg-secondary bg-opacity-10"><i class="bi bi-slash-circle me-1"></i>ไม่มีฝ่าย</span>
                                    }
                                </td>
                                <td class="align-middle text-center fit-content">
                                    <div class="d-flex justify-content-center gap-2">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                                            <i class="bi bi-pencil-square me-1"></i>แก้ไข
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            const table = app.setupDataTable('#viewTable', {
                columnDefs: [
                    {
                        orderable: false, targets: [1,2]
                    },
                    {
                        responsivePriority: 1,
                        targets: 0
                    },
                    {
                        responsivePriority: 2,
                        targets: 2
                    }
                ],
                fixedColumns:{
                    left:1,
                    right:1
                }
            });
        });
    </script>
}