@model Portal.Shared.Models.ViewModel.CompanyViewModel

@{
    ViewData["Title"] = "สร้างบริษัทใหม่";
    Layout = "_Layout";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="d-flex align-items-center mb-4">
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm me-2">
                    <i class="bi bi-arrow-left"></i>
                </a>
                <h2 class="mb-0 text-primary">@ViewData["Title"]</h2>
            </div>

            <div class="card border-0 shadow-sm mb-3">
                <div class="card-body">
                    <p class="text-muted mb-0">
                        <i class="bi bi-info-circle-fill text-primary me-2"></i>
                        กรุณากรอกข้อมูลให้ครบถ้วน
                    </p>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <partial name="_CompanyForm" model="Model" />
                </div>
                <div class="card-footer setStickyBottom py-3">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>ยกเลิก
                        </a>
                        <button type="submit" form="SaveForm" class="btn btn-primary">
                            <span class="spinner-border spinner-border-sm me-2 d-none" role="status" aria-hidden="true"></span>
                            <i class="bi bi-check-circle me-2"></i>บันทึกข้อมูล
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/company-form.js" asp-append-version="true"></script>
}