@model IEnumerable<Portal.Shared.Models.ViewModel.DivisionViewModel>

@{
    ViewData["Title"] = "จัดการข้อมูลสายงาน";
    Layout = "_Layout";
    var breadcrumbs = new List<Tuple<string, string>>
    {
        new("หน้าแรก", Url.Action("Index","Home") ?? ""),
        new("ข้อมูลสายงาน", "")
    };
}

<div class="container py-4">
    <partial name="_Breadcrumb" model="breadcrumbs" />

    <!-- Header with create button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-0">@ViewData["Title"]</h2>
            <p class="text-muted mb-0"><i class="bi bi-info-circle me-2"></i>รายการสายงานทั้งหมดในระบบ</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>เพิ่มสายงาน
        </a>
    </div>

    <!-- DataTable Card -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table id="viewTable" class="table table-hover table-striped mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="text-nowrap">@Html.DisplayNameFor(model => model.Name)</th>
                            <th class="text-nowrap">@Html.DisplayNameFor(model => model.CompanyName)</th>
                            <th class="text-nowrap text-center">@Html.DisplayNameFor(model => model.TotalDepartment)</th>
                            <th class="text-nowrap text-center">จัดการ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle">@Html.DisplayFor(modelItem => item.Name)</td>
                                <td class="align-middle text-nowrap">@Html.DisplayFor(modelItem => item.CompanyName)</td>
                                <td class="align-middle text-center fit-content">
                                    @if (item.TotalDepartment > 0)
                                    {
                                        <button type="button" class="btn btn-info btn-sm"
                                                onclick="showGlobalModal({
                                                           url: '@Url.Action("Departments", "Division", new { id = item.Id })',
                                                           title: 'รายการฝ่าย - @item.Name',
                                                           size: 'lg'
                                                       })">
                                            <i class="bi bi-diagram-2 me-1"></i>@Html.DisplayFor(modelItem => item.TotalDepartment)
                                        </button>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary bg-opacity-25 text-dark-emphasis"><i class="bi bi-slash-circle me-1"></i>ไม่มีฝ่าย</span>
                                    }
                                </td>
                                <td class="align-middle text-center fit-content">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                                        <i class="bi bi-pencil-square me-1"></i>แก้ไข
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            const table = app.setupDataTable('#viewTable', {
                columnDefs: [
                    { orderable: false, targets: [2, 3] },
                    { responsivePriority: 1, targets: 0 },
                    { responsivePriority: 2, targets: 3 }
                ],
                fixedColumns: {
                    left: 1,
                    right: 1
                }
            });
        });
    </script>
}
