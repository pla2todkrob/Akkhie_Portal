@model IEnumerable<Portal.Shared.Models.ViewModel.DepartmentViewModel>

@{
    ViewData["Title"] = "จัดการข้อมูลฝ่าย";
    Layout = "_Layout";
    var breadcrumbs = new List<Tuple<string, string>>
    {
        new("หน้าแรก", Url.Action("Index","Home") ?? ""),
        new("ข้อมูลฝ่าย", "")
    };
}

<div class="container py-4">
    <partial name="_Breadcrumb" model="breadcrumbs" />

    <!-- Header with create button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-0">@ViewData["Title"]</h2>
            <p class="text-muted mb-0"><i class="bi bi-info-circle me-2"></i>รายการฝ่ายทั้งหมดในระบบ</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-2"></i>เพิ่มฝ่าย
        </a>
    </div>

    <!-- DataTable Card -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table id="viewTable" class="table table-hover table-striped mb-0" style="width:100%">
                    <thead class="table-light">
                        <tr>
                            <th class="text-nowrap">@Html.DisplayNameFor(model => model.Name)</th>
                            <th class="text-nowrap">@Html.DisplayNameFor(model => model.DivisionName)</th>
                            <th class="text-nowrap">@Html.DisplayNameFor(model => model.CompanyName)</th>
                            <th class="text-nowrap text-center">@Html.DisplayNameFor(model => model.TotalSection)</th>
                            <th class="text-center">จัดการ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle">@item.Name</td>
                                <td class="align-middle">@item.DivisionName</td>
                                <td class="align-middle">@item.CompanyName</td>
                                <td class="align-middle text-center">
                                    @if (item.TotalSection > 0)
                                    {
                                        <button class="btn btn-sm btn-info view-details-btn"
                                                data-url="@Url.Action("Sections", "Department", new { id = item.Id })"
                                                data-title="รายการแผนกในฝ่าย: @item.Name"
                                                data-size="md">
                                            <i class="bi bi-diagram-2 me-1"></i>@Html.DisplayFor(modelItem => item.TotalSection)
                                        </button>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary-subtle text-dark-emphasis"><i class="bi bi-slash-circle me-1"></i>ไม่มีแผนก</span>
                                    }
                                </td>
                                <td class="align-middle text-center fit-content">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">
                                        <i class="bi bi-pencil-square me-1"></i>แก้ไข
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            app.setupDataTable('#viewTable', {
                orderFixed: [[2, 'asc']],
                order: [[1, 'asc']],

                columnDefs: [
                    { orderable: false, targets: [3, 4] },
                    { responsivePriority: 1, targets: 0 },
                    { responsivePriority: 2, targets: 4 },
                    { visible: false, targets: 2 }
                ],
                rowGroup: {
                    dataSrc: 2
                }
            });

            $('#viewTable').on('click', '.view-details-btn', function() {
                const button = $(this);
                app.showGlobalModal({
                    url: button.data('url'),
                    title: button.data('title'),
                    size: button.data('size')
                });
            });
        });
    </script>
}
