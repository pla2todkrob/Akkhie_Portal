@model IEnumerable<Portal.Shared.Models.ViewModel.Support.TicketListViewModel>

@{
    ViewData["Title"] = "จัดการ Support Ticket";
    Layout = "_Layout";
    var breadcrumbs = new List<Tuple<string, string>>
    {
        new("หน้าแรก", Url.Action("Index", "Home") ?? ""),
        new("จัดการ Support Ticket", "")
    };
}

<div class="container-fluid py-4">
    <partial name="_Breadcrumb" model="breadcrumbs" />

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-0">@ViewData["Title"]</h2>
            <p class="text-muted mb-0"><i class="bi bi-ticket-detailed me-2"></i>รายการแจ้งปัญหาและคำขอทั้งหมดในระบบ</p>
        </div>
    </div>
    
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <!-- DataTable Card -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table id="ticketsTable" class="table table-hover table-striped" style="width:100%">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.TicketNumber)</th>
                            <th>@Html.DisplayNameFor(model => model.Title)</th>
                            <th>@Html.DisplayNameFor(model => model.ReportedBy)</th>
                            <th>@Html.DisplayNameFor(model => model.DepartmentName)</th>
                            <th>@Html.DisplayNameFor(model => model.Status)</th>
                            <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                            <th class="text-center">จัดการ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.TicketNumber</td>
                                <td>@item.Title</td>
                                <td>@item.ReportedBy</td>
                                <td>@item.DepartmentName</td>
                                <td>
                                    <span class="badge 
                                        @_ = (item.Status == Portal.Shared.Enums.Support.TicketStatus.Open ? "bg-primary" :
                                              item.Status == Portal.Shared.Enums.Support.TicketStatus.InProgress ? "bg-warning text-dark" :
                                              item.Status == Portal.Shared.Enums.Support.TicketStatus.Resolved ? "bg-success" : "bg-secondary")">
                                        @item.StatusName
                                    </span>
                                </td>
                                <td data-order="@item.CreatedAt.ToString("o")">@item.CreatedAt.ToLocalTime().ToString("g")</td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-outline-primary" title="ดูรายละเอียด">
                                        <i class="bi bi-search"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            app.setupDataTable('#ticketsTable', {
                order: [[5, 'desc']], // Sort by CreatedAt date descending by default
                columnDefs: [
                    { orderable: false, targets: 6 } // Disable sorting on 'Manage' column
                ]
            });
        });
    </script>
}
