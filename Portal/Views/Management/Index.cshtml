@{
    ViewData["Title"] = "หน้าการจัดการข้อมูลหลัก";
    var breadcrumbs = new List<Tuple<string, string>>
    {
        new("หน้าแรก", Url.Action("Index", "Home") ?? ""),
        new((string)ViewData["Title"], "")
    };
}

@section Styles {
    <style>
        .feature-icon {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 3rem;
            height: 3rem;
            font-size: 1.5rem;
            color: #fff;
            border-radius: .75rem;
        }

        .card-link-stretch {
            color: inherit;
            text-decoration: none;
        }

            .card-link-stretch:hover .card {
                transform: translateY(-5px);
                box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
                border-color: var(--bs-primary);
            }

        .card {
            transition: transform .2s ease-in-out, box-shadow .2s ease-in-out, border-color .2s ease-in-out;
        }
    </style>
}

<partial name="_Breadcrumb" model="breadcrumbs" />

<div class="container py-4">
    <div class="text-center mb-5">
        <h1 class="display-5 fw-bold">@ViewData["Title"]</h1>
        <p class="fs-5 text-muted">เลือกเมนูที่ท่านต้องการจัดการ</p>
    </div>

    @* --- โครงสร้างองค์กร --- *@
    <h4 class="mb-3 pb-2 border-bottom">
        <i class="bi bi-diagram-3-fill text-primary me-2"></i>
        โครงสร้างองค์กร
    </h4>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4 mb-5">
        <div class="col">
            <a asp-controller="Company" asp-action="Index" class="card-link-stretch">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex align-items-center"><div class="feature-icon bg-primary me-3"><i class="bi bi-building"></i></div><span class="fw-bold">บริษัท</span></div>
                </div>
            </a>
        </div>
        <div class="col">
            <a asp-controller="Division" asp-action="Index" class="card-link-stretch">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex align-items-center"><div class="feature-icon bg-info me-3"><i class="bi bi-grid-1x2"></i></div><span class="fw-bold">สายงาน</span></div>
                </div>
            </a>
        </div>
        <div class="col">
            <a asp-controller="Department" asp-action="Index" class="card-link-stretch">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex align-items-center"><div class="feature-icon bg-success me-3"><i class="bi bi-collection"></i></div><span class="fw-bold">ฝ่าย</span></div>
                </div>
            </a>
        </div>
        <div class="col">
            <a asp-controller="Section" asp-action="Index" class="card-link-stretch">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex align-items-center"><div class="feature-icon bg-warning me-3"><i class="bi bi-boxes"></i></div><span class="fw-bold">แผนก</span></div>
                </div>
            </a>
        </div>
    </div>

    @* --- ทรัพยากรบุคคล --- *@
    <h4 class="mb-3 pb-2 border-bottom">
        <i class="bi bi-people-fill text-danger me-2"></i>
        ทรัพยากรบุคคล
    </h4>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        <div class="col">
            <a asp-controller="Employee" asp-action="Index" class="card-link-stretch">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex align-items-center"><div class="feature-icon bg-danger me-3"><i class="bi bi-person-lines-fill"></i></div><span class="fw-bold">พนักงาน</span></div>
                </div>
            </a>
        </div>
    </div>
</div>
