@model Portal.Shared.Models.DTOs.Support.CreateTicketRequest

@{
    // This partial view is designed to be loaded into the support modal.
    // It uses the CreateTicketRequest DTO to build the form.
}

<div class="card border-0">
    <div class="card-body">
        <h5 class="card-title mb-3">แจ้งปัญหาการใช้งาน</h5>
        <p class="text-muted small mb-4">กรุณากรอกข้อมูลปัญหาที่พบให้ละเอียดที่สุด เพื่อให้ทีมงานสามารถช่วยเหลือท่านได้อย่างรวดเร็ว</p>

        <form id="createTicketForm" novalidate>
            @* Anti-forgery token is crucial for security *@
            @Html.AntiForgeryToken()

            @* Related Ticket Dropdown (to be initialized with bootstrap-select) *@
            <div class="mb-3">
                <label asp-for="RelatedTicketId" class="form-label">อ้างอิง Ticket เก่า (ถ้ามี)</label>
                <select asp-for="RelatedTicketId" id="relatedTicketId" class="form-control"></select>
                @* Note: We use a standard select here and let JavaScript enhance it *@
            </div>

            @* Ticket Title *@
            <div class="form-floating mb-3">
                <input asp-for="Title" class="form-control" id="ticketTitle" placeholder="หัวข้อปัญหา" required>
                <label asp-for="Title">หัวข้อปัญหา (โปรดระบุให้ชัดเจน)</label>
                <span asp-validation-for="Title" class="text-danger small"></span>
            </div>

            @* Ticket Description *@
            <div class="form-floating mb-3">
                <textarea asp-for="Description" class="form-control" id="ticketDescription" placeholder="รายละเอียด" style="height: 150px" required></textarea>
                <label asp-for="Description">รายละเอียด (ระบุขั้นตอน, ข้อความ Error ที่พบ)</label>
                <span asp-validation-for="Description" class="text-danger small"></span>
            </div>

            @* File Attachment Section *@
            <div>
                <label for="ticketFiles" class="form-label">แนบไฟล์ (รูปภาพ, เอกสาร)</label>
                <input type="file" class="form-control" id="ticketFiles" multiple>
                <div class="progress mt-2" id="upload-progress-bar" style="height: 5px; display: none;">
                    <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 0%;" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
                <div id="file-upload-list" class="mt-2 small">
                    @* Uploaded file list will be dynamically inserted here by JavaScript *@
                </div>
            </div>
        </form>
    </div>
    <div class="card-footer bg-transparent text-end border-0 pt-3">
        @* This button is outside the <form> but is linked via the 'form' attribute *@
        <button type="submit" form="createTicketForm" class="btn btn-primary" id="submit-problem-btn">
            <span class="spinner-border spinner-border-sm me-2 d-none"></span>
            <i class="bi bi-send-fill me-2"></i>ส่งเรื่อง
        </button>
    </div>
</div>
