<!DOCTYPE html>
<html lang="th" data-bs-theme="light">
<head>
    <partial name="_FaviconsAndManifest" />
    <title>@ViewData["Title"] - อัคคีปราการ</title>
    <partial name="_PartialCss" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100 bg-light">
    <partial name="_PartialHeader" />

    <main class="flex-grow-1 py-3">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="bg-white border-top py-3">
        <div class="container text-center text-muted">
            <small>&copy; @DateTime.Now.Year - บริษัทอัคคีปราการ จำกัด (มหาชน)</small>
        </div>
    </footer>
    <div class="position-fixed bottom-0 end-0 m-4">
        <button class="btn btn-info text-white shadow-lg rounded-4 d-flex flex-column align-items-center justify-content-center p-3"
                type="button" data-bs-toggle="modal" data-bs-target="#supportModal">
            <i class="bi bi-person-raised-hand fs-2"></i>
            <span class="small mt-1">ช่วยเหลือ</span>
        </button>
    </div>


    <partial name="_ModalPartial" />
    <partial name="_PartialJs" />
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>