@* --- Global Modal (for simple dynamic content) --- *@
<div class="modal fade" id="globalModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable" id="globalModalDialog">
        <div class="modal-content" id="globalModalContent">
            @* Content will be loaded via AJAX *@
        </div>
    </div>
</div>

@* --- Redesigned and Expanded Support Modal --- *@
<div class="modal fade" id="supportModal" tabindex="-1" aria-labelledby="supportModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="supportModalLabel">
                    <i class="bi bi-headset me-2 text-primary"></i>ศูนย์ช่วยเหลือ (Help Center)
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div class="row">
                    <div class="col-md-3">
                        <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">

                            <!-- 1. แจ้งปัญหา -->
                            <button class="nav-link active text-start" id="v-pills-problem-tab" data-bs-toggle="pill" data-bs-target="#v-pills-problem" type="button" role="tab">
                                <i class="bi bi-exclamation-octagon-fill me-2"></i>แจ้งปัญหา
                            </button>

                            <!-- 2. เบิก/ขออุปกรณ์ -->
                            <button class="nav-link text-start" id="v-pills-request-tab" data-bs-toggle="pill" data-bs-target="#v-pills-request" type="button" role="tab">
                                <i class="bi bi-box-seam-fill me-2"></i>เบิก/ขออุปกรณ์
                            </button>

                            <!-- 3. ขอยืมอุปกรณ์ -->
                            <button class="nav-link text-start" id="v-pills-loan-tab" data-bs-toggle="pill" data-bs-target="#v-pills-loan" type="button" role="tab">
                                <i class="bi bi-handbag-fill me-2"></i>ขอยืมอุปกรณ์
                            </button>

                            <!-- 4. เพิ่ม/ถอน สิทธิ์ -->
                            <button class="nav-link text-start" id="v-pills-permission-tab" data-bs-toggle="pill" data-bs-target="#v-pills-permission" type="button" role="tab">
                                <i class="bi bi-person-lock me-2"></i>เพิ่ม/ถอน สิทธิ์
                            </button>

                            <!-- 5. พัฒนาโปรแกรม -->
                            <button class="nav-link text-start" id="v-pills-develop-tab" data-bs-toggle="pill" data-bs-target="#v-pills-develop" type="button" role="tab">
                                <i class="bi bi-code-slash me-2"></i>พัฒนาโปรแกรม
                            </button>

                            <!-- 6. ประวัติของฉัน -->
                            <button class="nav-link text-start" id="v-pills-history-tab" data-bs-toggle="pill" data-bs-target="#v-pills-history" type="button" role="tab">
                                <i class="bi bi-clock-history me-2"></i>ประวัติของฉัน
                            </button>
                        </div>
                    </div>

                    <div class="col-md-9">
                        <div class="tab-content" id="v-pills-tabContent">

                            <div class="tab-pane fade show active" id="v-pills-problem" role="tabpanel">
                                <partial name="SupportTabs/_Problem" />
                            </div>

                            <div class="tab-pane fade" id="v-pills-request" role="tabpanel">
                                <partial name="SupportTabs/_StockWithdrawal" />
                            </div>

                            <div class="tab-pane fade" id="v-pills-loan" role="tabpanel">
                                <div class="card border-0">
                                    <div class="card-body">
                                        <h5 class="card-title mb-3">ขอยืมอุปกรณ์</h5>
                                        <p class="text-muted">ฟอร์มสำหรับขอยืมอุปกรณ์จะถูกพัฒนาในขั้นต่อไป</p>
                                    </div>
                                </div>
                            </div>

                            <div class="tab-pane fade" id="v-pills-permission" role="tabpanel">
                                <div class="card border-0">
                                    <div class="card-body">
                                        <h5 class="card-title mb-3">ขอเพิ่ม/ถอน สิทธิ์การเข้าถึงโปรแกรม</h5>
                                        <p class="text-muted">ฟอร์มสำหรับขอสิทธิ์จะถูกพัฒนาในขั้นต่อไป</p>
                                    </div>
                                </div>
                            </div>

                            <div class="tab-pane fade" id="v-pills-develop" role="tabpanel">
                                <div class="card border-0">
                                    <div class="card-body">
                                        <h5 class="card-title mb-3">ขอพัฒนาระบบ/โปรแกรม</h5>
                                        <p class="text-muted">ฟอร์มสำหรับขอพัฒนาระบบจะถูกพัฒนาในขั้นต่อไป</p>
                                    </div>
                                </div>
                            </div>

                            <div class="tab-pane fade" id="v-pills-history" role="tabpanel">
                                <div id="history-list-view">
                                    <h5 class="mb-3">ประวัติการแจ้งปัญหาและคำขอ</h5>
                                    <div id="my-tickets-history-container"></div>
                                </div>
                                <div id="history-detail-view" style="display: none;"></div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
